Algoritmo "diaDaSemana"

Var
// Seção de Declarações das variáveis 
dia :inteiro

Inicio
// Entrada

Escreval ("Informe o DIA da semana ( de 1 a 7 ): ")
leia(dia)

// Processamento
escolha dia
caso 1
     escreval ("O dia é DOMINGO")
caso 2
     escreval ("O dia é SEGUNDA-FEIRA")
caso 3
     escreval ("O dia é TERÇA-FEIRA")
caso 4
     escreval ("O dia é QUARTA-FEIRA")
caso 5
     escreval ("O dia é QUINTA-FEIRA")
caso 6
     escreval ("O dia é SEXTA-FEIRA")
caso 7
     escreval ("O dia é SÁBADO")
outro caso
   escreval ("O dia é INVÁLIDO. Favor informar o dia:  ")
fimescolha

Fimalgoritmo
